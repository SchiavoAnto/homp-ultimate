<UserControl x:Class="CustomMediaPlayerUltimate.ListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomMediaPlayerUltimate"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">

    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Grid Background="#303030">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="ItemTextLabel" Grid.Column="0" Content="{TemplateBinding Content}" VerticalAlignment="Center" Foreground="WhiteSmoke"/>
                <Button Style="{StaticResource CustomButton}" Width="36" Height="36" Grid.Column="1">
                    <Image Source="/Images/play.png"/>
                </Button>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>

    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Add lyrics for song..."/>
        </ContextMenu>
    </UserControl.ContextMenu>

</UserControl>
