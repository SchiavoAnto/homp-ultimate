<Window x:Class="CustomMediaPlayerUltimate.SussyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomMediaPlayerUltimate"
        mc:Ignorable="d"
        Title="SussyWindow" Height="450" Width="800" Background="#252525" Loaded="OnWindowLoaded">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="ListStackPanel" Orientation="Vertical" Margin="5,0,5,5">
            <StackPanel.Resources>
                <Style TargetType="{x:Type local:ListItem}">
                    <Setter Property="Margin" Value="0,5,0,0"/>
                </Style>
            </StackPanel.Resources>
        </StackPanel>
    </ScrollViewer>
    
</Window>
