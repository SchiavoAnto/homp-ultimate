<UserControl x:Class="CustomMediaPlayerUltimate.Elements.PlaylistElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomMediaPlayerUltimate.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200" MouseUp="ElementMouseUp" MouseDoubleClick="ElementMouseDoubleClick">
    <Grid x:Name="GridContainer" Style="{StaticResource PlaylistElement}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="18"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="ItemTextLabel" Grid.Column="0" VerticalAlignment="Center" Foreground="WhiteSmoke"/>
        <Image x:Name="FocusedIndicatorImage" Grid.Column="1" Source="/Images/selected_mark.png" Visibility="Collapsed"/>

        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Manage songs" Click="ManageSongsCtxClicked"/>
                <Separator/>
                <MenuItem Header="Rename" Click="RenameCtxClicked"/>
                <MenuItem Header="Delete" Click="DeleteCtxClicked"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
