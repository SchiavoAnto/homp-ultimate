<Window x:Class="CustomMediaPlayerUltimate.InputCaptureBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input capture box" Height="100" Width="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#252525" KeyUp="OnBoxKeyUp">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="MessageLabel" Foreground="WhiteSmoke" Content="Press a key (escape to cancel)..."/>
    </StackPanel>
</Window>
