<Window x:Class="CustomMediaPlayerUltimate.Elements.SongsChooserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomMediaPlayerUltimate.Elements"
        mc:Ignorable="d"
        Title="Choose songs..." Height="500" Width="500" WindowStartupLocation="CenterScreen" Background="#252525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContainerPanel" Margin="0,0,0,5" Orientation="Vertical"/>
        </ScrollViewer>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
                <Button Click="CancelButtonClick">Cancel</Button>
                <Separator Width="5" Background="Transparent"/>
                <Button Click="ConfirmButtonClick">Confirm</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
