<UserControl x:Class="CustomMediaPlayerUltimate.Elements.CollectionElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomMediaPlayerUltimate.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200" MouseUp="ElementMouseUp" MouseDoubleClick="ElementMouseDoubleClick">
    <Grid x:Name="GridContainer" Style="{StaticResource CollectionElement}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="16"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="ItemTextLabel" Grid.Column="0" VerticalAlignment="Center" Foreground="WhiteSmoke"/>
        <ContentControl x:Name="FocusedIndicatorIcon" Grid.Column="1" Margin="0,0,4,0" Content="{StaticResource SelectedMarkIcon}" Visibility="Collapsed"/>

        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Play" Click="PlayCtxClicked"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
