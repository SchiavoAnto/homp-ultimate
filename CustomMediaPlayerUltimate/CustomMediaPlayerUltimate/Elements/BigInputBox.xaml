<Window x:Class="CustomMediaPlayerUltimate.BigInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input box" Height="500" Width="450"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#252525">
    <StackPanel>
        <Label x:Name="MessageLabel" Foreground="WhiteSmoke" Content="Insert here your text..."/>
        <TextBox x:Name="InputTextBox" Style="{StaticResource CustomTextBox}" Margin="5,0,5,5" Background="#252525" Foreground="WhiteSmoke" Height="400" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="5,0,5,0">
            <Button x:Name="OkButton" Style="{StaticResource CustomButton}" Click="OkButtonClick" Content="OK" />
            <Separator Width="5" Opacity="0"/>
            <Button x:Name="CancelButton" Style="{StaticResource CustomButton}" Click="CancelButtonClick" Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
